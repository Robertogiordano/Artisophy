<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SingleMuseumActivity">

    <ImageView
        android:id="@+id/imgPathImageViewSingleMuseum"
        android:layout_width="149dp"
        android:layout_height="142dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextViewSingleMuseum"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/nameTextViewSingleMuseum"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionTextViewSingleMuseum"
        android:layout_width="332dp"
        android:layout_height="218dp"
        android:layout_marginTop="180dp"
        android:justificationMode="inter_word"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPathImageViewSingleMuseum" />

    <TextView
        android:id="@+id/openingHourTextViewSingleMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Opening hour: \n 10am"
        app:layout_constraintBottom_toTopOf="@+id/locationTextViewSingleMuseum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/closingHourTextViewSingleMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="30dp"
        android:text="Closing hour: \n pm"
        app:layout_constraintBottom_toTopOf="@+id/descriptionTextViewSingleMuseum"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locationTextViewSingleMuseum"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="64dp"
        android:gravity="right"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/descriptionTextViewSingleMuseum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/closingHourTextViewSingleMuseum" />


    <Button
        android:id="@+id/backButtonSingleMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>