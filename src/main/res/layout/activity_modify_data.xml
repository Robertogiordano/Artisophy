<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ModifyDataActivity">

        <TextView
            android:id="@+id/titleTextViewModifyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modify User Info"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/userInfoLayoutModifyProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/titleTextViewModifyProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/nameLabelTextViewModifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditTextModifyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter your name"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/surnameLabelTextViewModifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surname"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/surnameEditTextModifyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter your surname"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/usernameLabelTextViewModifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/usernameEditTextModifyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Enter your username"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/emailLabelTextViewModifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/emailEditTextModifyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Enter your email address"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/passwordLabelTextViewModifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:text="Password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <FrameLayout
                android:id="@+id/passwordLayoutModifyProfile"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/passwordEditTextModifyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:hint="Enter your password" />

            </FrameLayout>

            <Switch
                android:id="@+id/switchSeePasswordModifyProfile"
                android:layout_width="378dp"
                android:layout_height="50dp"
                android:text="Show password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="104dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/backButtonModifyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Back"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/SaveButtonModifyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_weight="1"
                android:text="Save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/backButtonModifyProfile" />

        </LinearLayout>








</androidx.constraintlayout.widget.ConstraintLayout>